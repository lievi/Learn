extends ../layout

block content
	div(class="well bs-compenent")


		form(class="form-horizontal" method="POST", action="/usuarios/edit/#{valor._id}")
			fieldset
				legend  Editar
				div(class="form-group")						
					div(class="col-lg-10")
						input(type="text" name="nome"  class="form-control" value="#{valor.nome}")
						br				
					div(class="col-lg-10")
						input(type="text" name="login"  class="form-control" placeholder="Login"  value="#{valor.login}")
						br				
						br
				div(class="form-group")
					button(type="submit" class="btn btn-primary") concluir
					&nbsp
					&nbsp
					a(href="/usuarios"  class="btn btn-default" ) voltar
		form(method="POST", action="/usuarios/delete/#{valor._id}")
			button(type="submit" class="btn btn-danger") Excluir cadastro
